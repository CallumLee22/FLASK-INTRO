    <body>
        <h3 class=heading>Please enter your name</h3>
    </body>
    
    <form>
        <label for="fname">First Name:</label><br>
        <input class="input_box" type="text" id="fname" name="fname"><br><br>
        <label for="lname">Last Name:</label><br>
        <input class="input_box" type="text" id="lname" name="lname"><br><br>
        <input class="clickables" type="submit" value="Submit">
        <button class="clickables">
        <a href="/display_sum">Click to view result</a>
        </button>
    </form>
